<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.FluxActivity">

    <LinearLayout
        android:id="@+id/promptContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/etPrompt"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:hint="Enter prompt here..."
        android:paddingStart="5dp"
        android:background="@android:color/transparent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/promptContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonGenerate"
        />

    <Button
        android:id="@+id/buttonGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        app:layout_constraintTop_toTopOf="@id/etPrompt"
        app:layout_constraintStart_toEndOf="@id/etPrompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/etPrompt"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/etPrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textFlux"
            />

        <TextView
            android:id="@+id/textFlux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. FLUX.1-dev"
            android:textSize="15sp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/prompt_background"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintStart_toStartOf="@id/imageFlux"
            app:layout_constraintBottom_toTopOf="@id/imageFlux"
            />
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageFlux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:roundPercent="0.1"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toTopOf="@id/imagePresident"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/imageFlux"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textPresident"
            />
        <TextView
            android:id="@+id/textPresident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. president-pjh"
            android:textSize="15sp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/prompt_background"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="@id/imagePresident"
            app:layout_constraintBottom_toTopOf="@id/imagePresident"
            />
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imagePresident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            app:roundPercent="0.1"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintBottom_toTopOf="@id/imageDiffusion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageFlux" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/imagePresident"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textDiffusion"
            />

        <TextView
            android:id="@+id/textDiffusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. stable-diffusion-3.5-large"
            android:textSize="15sp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/prompt_background"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="@id/imageDiffusion"
            app:layout_constraintBottom_toTopOf="@id/imageDiffusion"
            />
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageDiffusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:roundPercent="0.1"
            android:scaleType="fitXY"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagePresident" />


        <ProgressBar
            android:id="@+id/progressFlux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/black"
            app:layout_constraintTop_toTopOf="@id/imageFlux"
            app:layout_constraintStart_toStartOf="@id/imageFlux"
            app:layout_constraintEnd_toEndOf="@id/imageFlux"
            app:layout_constraintBottom_toBottomOf="@id/imageFlux"
            />

        <ProgressBar
            android:id="@+id/progressPresident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/black"
            app:layout_constraintTop_toTopOf="@id/imagePresident"
            app:layout_constraintStart_toStartOf="@id/imagePresident"
            app:layout_constraintEnd_toEndOf="@id/imagePresident"
            app:layout_constraintBottom_toBottomOf="@id/imagePresident"
            />

        <ProgressBar
            android:id="@+id/progressDiffusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/black"
            app:layout_constraintTop_toTopOf="@id/imageDiffusion"
            app:layout_constraintStart_toStartOf="@id/imageDiffusion"
            app:layout_constraintEnd_toEndOf="@id/imageDiffusion"
            app:layout_constraintBottom_toBottomOf="@id/imageDiffusion"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>